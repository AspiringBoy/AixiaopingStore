<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/open_pic_rll"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/post_good_edt_bg"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/good_dt_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/img_del_btn"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:background="@drawable/good_dt_text_btn_bg"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <Button
                android:id="@+id/img_move_up_btn"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/good_dt_text_btn_bg"
                android:text="上移"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/img_move_down_btn"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/good_dt_text_btn_bg"
                android:text="下移"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/img_insert_btn"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/good_dt_text_btn_bg"
                android:text="插入"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/add_img_display_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/tianjiatup" />
    </RelativeLayout>
</LinearLayout>