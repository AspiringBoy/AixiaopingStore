<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.axp.axpseller.activitys.user.SendScoreQrActivity">

    <com.axp.axpseller.views.custom.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/main_color"
        app:leftIv="@drawable/icon_fanhuij"
        app:titleColor="#ffffff"
        app:titleName="扫码赠送"
        app:titleSize="16dp"></com.axp.axpseller.views.custom.CustomToolbar>

    <ImageView
        android:id="@+id/qr_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="扫描二维码,赠送您的积分"
        android:textColor="#f96b47"
        android:textSize="14dp" />
</RelativeLayout>
