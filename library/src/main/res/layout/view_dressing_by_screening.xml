<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_classification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
    <FrameLayout
        android:id="@+id/layout_all_classifi"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_all_classifi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/icon_fenlei"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="全部分类"
            android:textColor="@color/font_color"
            android:textSize="@dimen/h5" />
    </FrameLayout>



    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/line"></View>

    <FrameLayout
        android:id="@+id/layout_sales_volume"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_sales_volume"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/icon_xiaoliang"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="销量"
            android:textColor="@color/font_color"
            android:textSize="@dimen/h5" />

    </FrameLayout>


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/line"></View>

    <FrameLayout
        android:id="@+id/layout_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_jiage"
            android:drawablePadding="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="价格"
            android:textColor="@color/font_color"
            android:textSize="@dimen/h5" />

    </FrameLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"
        ></View>
</LinearLayout>