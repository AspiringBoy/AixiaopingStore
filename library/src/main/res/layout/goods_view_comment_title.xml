<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/goods_comment_title_layout_height"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/rl_come_comment_list"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment"
            android:textColor="@color/font_content_color"
            android:textSize="@dimen/h8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  ("
            android:textColor="@color/font_content_color"
            android:textSize="@dimen/h8" />

        <TextView
            android:id="@+id/tv_goods_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="@color/font_content_color"
            android:textSize="@dimen/h8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:textColor="@color/font_content_color"
            android:textSize="@dimen/h8" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/good_comment_praise"
            android:textColor="@color/font_title_color"
            android:textSize="@dimen/h8" />

        <TextView
            android:id="@+id/tv_goods_comment_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99%"
            android:textColor="@color/main_color"
            android:textSize="@dimen/h8" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/icon_youjiantou"
            android:layout_marginLeft="6dp"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>


</RelativeLayout>