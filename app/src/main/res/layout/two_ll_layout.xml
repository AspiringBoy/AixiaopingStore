<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/start_time_rll"
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            style="@style/textAttrStyle"
            android:text="开始时间"
            android:layout_centerVertical="true"
            android:id="@+id/start_time_tag"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/start_time_tv"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="15dp"
            android:layout_toRightOf="@id/start_time_tag"
            android:layout_centerVertical="true"
            android:textColor="#999999"
            android:text="请选择开始时间"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_next"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/main_line_color"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/end_time_rll"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            style="@style/textAttrStyle"
            android:text="结束时间"
            android:layout_centerVertical="true"
            android:id="@+id/end_time_tag"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/end_time_tv"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="15dp"
            android:layout_toRightOf="@id/end_time_tag"
            android:layout_centerVertical="true"
            android:textColor="#999999"
            android:text="请选择结束时间"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_next"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>