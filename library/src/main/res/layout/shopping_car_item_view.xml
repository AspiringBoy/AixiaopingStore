<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_shopping_car_item"
    android:layout_width="match_parent"
    android:layout_height="138dp"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />


    <ImageView
        android:id="@+id/iv_to_goods"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:src="@drawable/icon_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_to_goods"
        android:orientation="horizontal"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/cb_select"
            style="@style/CheckBoxSelect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_goods_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="4dp"
                android:src="@drawable/icon_app" />


            <com.axp.axpseller.views.widget.AddAndSubtractView
                android:id="@+id/asv_number"
                android:layout_width="90dp"
                android:layout_height="wrap_content">

            </com.axp.axpseller.views.widget.AddAndSubtractView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_goods_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_goods_image"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="流口水的减肥了看见了看法是可敬的论文看来家里大富科技"
                android:textColor="@color/font_title_color"
                android:textSize="@dimen/h8" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="商品数量："
                    android:textColor="@color/font_content_color"
                    android:textSize="@dimen/h7" />

                <TextView
                    android:id="@+id/tv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="1"
                    android:textColor="@color/font_content_color"
                    android:textSize="@dimen/h7" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="大小：XXL；颜色分类：天蓝色"
                android:textSize="@dimen/h8" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥12"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/h8" />

                <TextView
                    android:id="@+id/tv_cost_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_value"
                    android:text="￥15"
                    android:textSize="@dimen/h8" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
