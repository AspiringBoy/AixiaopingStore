<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ececec"
    tools:context="com.axp.axpseller.activitys.sellerinfo.AllCityExtensionActivity">

    <include layout="@layout/tool_bar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <include layout="@layout/good_base_msg_layout"/>

            <View
                android:layout_width="match_parent"
                android:background="@color/main_line_color"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/textAttrStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="商品类别" />

                <TextView
                    android:id="@+id/good_type_tv"
                    style="@style/textAttrStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="12dp"
                    android:text="生活用品" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/main_line_color"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/textAttrStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="下架时间" />

                <TextView
                    android:id="@+id/sold_out_time_tv"
                    style="@style/textAttrStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="12dp"
                    android:text="下架时间为审核时间后的180天" />
            </LinearLayout>

            <Button
                android:id="@+id/post_extension_btn"
                android:layout_width="match_parent"
                android:background="@drawable/post_cover_btn_bg"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:text="发布推广"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="36dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
