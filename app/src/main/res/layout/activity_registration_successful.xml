<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroud"
    >
    <android.support.v7.widget.Toolbar
        android:id="@id/tool_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/icon_quxiao"
        app:title="注册—爱小屏"
        app:titleTextColor="@color/white"></android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:background="@color/white"
         >
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="30dp"
             >
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/icon_chengong_register"
                 android:layout_gravity="center_vertical"
                 />
             <TextView
                 android:layout_marginLeft="5dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="恭喜注册成功!"
                 android:textSize="@dimen/h4"
                 android:layout_gravity="center_vertical"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="10dp"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="您的专属邀请码："
                 android:layout_gravity="center_vertical"
                 android:textSize="@dimen/h7"
                 />
             <TextView
                 android:id="@+id/tv_invite_code"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text=""
                 android:textColor="@color/red"
                 android:layout_gravity="center_vertical"
                 android:textSize="@dimen/h7"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="10dp"
             >
             <ImageView
                 android:id="@+id/img_two"
                 android:layout_width="200dp"
                 android:layout_height="200dp"
                 android:layout_gravity="center_vertical"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="30dp"
             >
             <TextView
                 android:id="@+id/tv_invite_friends"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="马上邀请朋友>>"
                 android:textColor="@color/light_blue"
                 android:layout_gravity="center_vertical"
                 android:textSize="@dimen/h8"
                 android:visibility="gone"
                 />
         </LinearLayout>

     </LinearLayout>
     <TextView
         android:id="@+id/tv_obtain"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="30dp"
         android:text="怎么获得积分？"
         android:textColor="@color/light_blue"
         android:layout_marginLeft="25dp"
         android:textSize="@dimen/h8"
         android:visibility="gone"
         />
        <TextView
            android:id="@+id/tv_rebate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="返利能提现吗？"
        android:textColor="@color/light_blue"
        android:layout_marginLeft="25dp"
            android:textSize="@dimen/h8"
            android:visibility="invisible"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            >
            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="节日或亲朋好友的生日快到了，赶紧用积分兑换礼物吧，爱小屏免费帮您送上门！！"
                android:textSize="@dimen/h8"
                />
<!--            <TextView
                android:id="@+id/tv_how_to_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="怎么送？"
                android:textSize="@dimen/h8"
                android:textColor="@color/light_blue"
                android:layout_marginRight="68dp"
                android:layout_marginEnd="68dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />-->
        </RelativeLayout>

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_come"
            style="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color"
            android:text="马上去商城"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>
    </ScrollView>
</LinearLayout>
