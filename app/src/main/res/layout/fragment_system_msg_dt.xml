<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/system_msg_dt_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f96a48"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/icon_fanhuij">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="系统消息"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/system_msg_dt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/system_msg_dt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#333333"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/system_msg_dt_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/system_msg_dt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/system_msg_dt_sign"
            android:layout_marginRight="20dp"
            android:layout_marginTop="7dp"
            android:textColor="#333333"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>