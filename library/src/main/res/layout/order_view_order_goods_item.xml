<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="126dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_to_goods"
        android:layout_width="wrap_content"
        android:layout_height="126dp"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:src="@drawable/icon_right" />

    <TextView
        android:id="@+id/tv_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="X1"
        android:layout_toLeftOf="@id/iv_to_goods"
        android:layout_centerVertical="true"
        android:textColor="@color/font_color"
        android:textSize="@dimen/h8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_to_goods"
        android:orientation="horizontal"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/cb_select"
            style="@style/CheckBoxSelect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_goods_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:padding="4dp"
                android:src="@drawable/icon_app" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_goods_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:maxLines="2"
                android:text="流口水的减肥了看见了看法是可敬的论文看来家里大富科技"
                android:textColor="@color/font_color"
                android:textSize="@dimen/h8" />


            <TextView
                android:id="@+id/tv_spec"
                android:paddingLeft="4dp"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="大小：XXL；颜色分类：天蓝色"
                android:textColor="@color/font_color"
                android:textSize="@dimen/h8" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥12"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/h8" />

                <TextView
                    android:id="@+id/tv_cost_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@id/tv_value"
                    android:text="原价：15"
                    android:textColor="@color/font_content_color1"
                    android:textSize="@dimen/h8" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />

</RelativeLayout>
