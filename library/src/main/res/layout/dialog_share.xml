<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_column="4"
    android:layout_row="1"
    android:background="@color/white"
    app:orientation="horizontal">

    <TextView
        android:id="@+id/layout_share_dialog_mLvShareToQQFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/umeng_socialize_qq_on"
        android:gravity="center"
        android:padding="3dp"
        android:text="QQ"
        app:layout_columnWeight="1" />

    <TextView
        android:id="@+id/layout_share_dialog_mLvShareToQQZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/umeng_socialize_qzone_on"
        android:gravity="center"
        android:padding="3dp"
        android:text="QQ空间"
        app:layout_columnWeight="1" />

    <TextView
        android:id="@+id/layout_share_dialog_mLvShareToWechatFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/umeng_socialize_wechat"
        android:gravity="center"
        android:padding="3dp"
        android:text="微信"
        app:layout_columnWeight="1" />

    <TextView
        android:id="@+id/layout_share_dialog_mLvShareToFriendCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/umeng_socialize_wxcircle"
        android:gravity="center"
        android:padding="3dp"
        android:text="微信朋友圈"
        app:layout_columnWeight="1" />

</android.support.v7.widget.GridLayout>