<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/home_score_exchange_goods_width"
    android:layout_height="@dimen/home_score_exchange_goods_height"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp">

    <ImageView
        android:id="@+id/iv_goods_image"
        android:layout_width="@dimen/home_score_exchange_goods_size"
        android:layout_height="@dimen/home_score_exchange_goods_size" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_below="@id/iv_goods_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/h8"
        android:maxLines="1"
        android:textColor="@color/font_color"/>

    <TextView
        android:layout_below="@id/tv_goods_name"
        android:id="@+id/tv_cost_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/font_color"
        android:textSize="@dimen/h5"/>

</RelativeLayout>