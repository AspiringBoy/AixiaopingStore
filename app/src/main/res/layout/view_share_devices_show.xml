<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/form_layout_horizontal_margin"
        android:layout_marginRight="@dimen/form_layout_horizontal_margin"
        android:layout_marginTop="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tv_name"
                style="@style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@null"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="请输入分享账号"
                android:textSize="@dimen/h4"
                android:textColorHint="@color/lightgray"
                android:maxLength="11"
                android:inputType="number"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <com.rey.material.widget.Button
            android:id="@+id/btn_share_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/form_layout_horizontal_margin"
            android:layout_marginRight="@dimen/form_layout_horizontal_margin"
            android:layout_marginTop="40dp"
            android:text="确定分享"
            android:textColor="@color/white"
            android:textSize="@dimen/h4"
            app:v_styleId="@array/button_raise_color" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <com.rey.material.widget.Button
            android:id="@+id/btn_share_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/form_layout_horizontal_margin"
            android:layout_marginRight="@dimen/form_layout_horizontal_margin"
            android:layout_marginTop="40dp"
            android:text="取消分享"
            android:textColor="@color/white"
            android:textSize="@dimen/h4"
            app:v_styleId="@array/button_raise_color" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
