<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_locatiion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="当前位置"/>

    <LinearLayout
        android:id="@+id/ll_map_title"
        android:layout_below="@+id/tv_locatiion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_start_baidumap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="百度地图"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_start_amap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="高德地图"
            android:layout_weight="1"/>
    </LinearLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mv_baidumap"
        android:layout_below="@+id/ll_map_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.baidu.mapapi.map.MapView>

</RelativeLayout>