<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/dl_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="@dimen/h4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/form_layout_horizontal_margin"
        android:layout_marginRight="@dimen/form_layout_horizontal_margin"
        android:layout_marginTop="230dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/edt_regist_phone"
                style="@style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/dl_zhanghao"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="@string/input_phone_number"
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="@color/lightgray"
                android:textSize="@dimen/h8" />

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/edt_regist_phone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/darkgrey" />

            <EditText
                android:id="@+id/edt_regist_password"
                style="@style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/view_line"
                android:layout_margin="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/dl_mima"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="@string/hint_login_pwd"
                android:inputType="textPassword"
                android:textColorHint="@color/lightgray"
                android:textSize="@dimen/h8" />

            <View
                android:id="@+id/view_lines"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/edt_regist_password"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/darkgrey" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_lines"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_captcha"
                    style="@style/Widget.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:drawableLeft="@drawable/dl_mima"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/invitation_code"
                    android:inputType="number"
                    android:textColorHint="@color/lightgray"
                    android:textSize="@dimen/h8" />

                <TextView
                    android:id="@+id/btn_send_captcha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:text="@string/get_auth_code"
                    android:textColor="@color/mediumslateblue"
                    android:textSize="@dimen/h8" />
            </RelativeLayout>

            <View
                android:id="@+id/view_liness"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/rl"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/darkgrey" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_liness"
                android:layout_centerInParent="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="@dimen/form_layout_horizontal_margin"
                android:layout_marginRight="@dimen/form_layout_horizontal_margin"
                android:layout_marginTop="30dp"
                android:background="@drawable/my_buttom"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="@dimen/h7" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>
