<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroud"
    >
    <android.support.v7.widget.Toolbar
        android:id="@id/tool_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:title="修改密码"
        app:navigationIcon="@drawable/icon_quxiao"
        app:titleTextColor="@color/white"
        >
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/form_layout_horizontal_margin"
            android:layout_marginRight="@dimen/form_layout_horizontal_margin"
            android:layout_marginTop="30dp"
            >
            <EditText
                android:id="@+id/edt_old_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/dl_mima"
                android:layout_marginLeft="10dp"
                android:hint="请输入旧密码"
                android:textSize="@dimen/h8"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:textColorHint="@color/lightgray"
                android:inputType="textPassword"
                android:maxLength="16"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/form_layout_horizontal_margin"
            android:layout_marginRight="@dimen/form_layout_horizontal_margin"
            android:layout_marginTop="30dp"
            >
            <EditText
                android:id="@+id/edt_input_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/dl_mima"
                android:layout_marginLeft="10dp"
                android:hint="@string/input_new_password"
                android:textSize="@dimen/h8"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:textColorHint="@color/lightgray"
                android:inputType="textPassword"
                android:maxLength="16"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/form_layout_horizontal_margin"
            android:layout_marginRight="@dimen/form_layout_horizontal_margin"
            android:layout_marginTop="30dp"
            >
            <EditText
                android:id="@+id/edt_input_password_again"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/dl_mima"
                android:layout_marginLeft="10dp"
                android:hint="@string/input_mew_password_again"
                android:textSize="@dimen/h8"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:textColorHint="@color/lightgray"
                android:inputType="textPassword"
                android:maxLength="16"
                />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <com.gc.materialdesign.views.ButtonRectangle
        style="@null"
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/form_layout_horizontal_margin"
        android:layout_marginRight="@dimen/form_layout_horizontal_margin"
        android:background="@color/main_color"
        android:text="@string/make_sure"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        />
</LinearLayout>
