<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="255dp"
    android:layout_height="305dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_rec_bg">

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <ImageView
                android:id="@+id/cancel_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/quxiao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="在线支付"
                android:textColor="#323232"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/title"
            android:background="@color/main_line_color" />

        <TextView
            android:id="@+id/score_recharge_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="积分充值"
            android:textColor="#323232"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/recharge_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_recharge_tag"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="￥100"
            android:textColor="#323232"
            android:textSize="36dp" />

        <RelativeLayout
            android:id="@+id/score_rll_tag"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/recharge_money_tv"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/jifen" />

            <TextView
                android:id="@+id/get_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="可获120积分"
                android:textColor="#646464"
                android:textSize="14dp" />
        </RelativeLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/score_rll_tag"
            android:background="@color/main_line_color" />

        <RelativeLayout
            android:id="@+id/pay_rll_tag"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/line2">

            <ImageView
                android:id="@+id/pay_mode_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/yinlian" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_mode_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银联支付"
                    android:textColor="#646464"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/icon_next" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/pay_rll_tag"
            android:background="@color/main_line_color" />

        <Button
            android:id="@+id/go_pay_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/line3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/post_cover_btn_bg"
            android:text="去支付"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </RelativeLayout>

</LinearLayout>