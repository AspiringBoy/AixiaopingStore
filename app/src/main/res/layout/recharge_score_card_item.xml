<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/recharge_100_rll"
        android:layout_width="105dp"
        android:layout_height="52dp"
        android:background="@drawable/recharge_online_orange_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recharge_100_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="100元"
                android:textColor="@color/main_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/recharge_120_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="获得120积分"
                android:textColor="@color/main_color"
                android:textSize="11dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/tehui_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/tehui" />

    </RelativeLayout>

</LinearLayout>